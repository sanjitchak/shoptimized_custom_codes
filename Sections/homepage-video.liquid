 {% if template !="cart" %}
{% if section.settings.footer_video_display%}
<section class="container-fluid grey_bg videosections" data-no-instant>
		<div class="row">
          <div class="container">
          <div class="row">
			<div class="  grey_wrap">
				<div class="col-md-6 grey_part"  >
						<div>
							<h4>{{ section.settings.video1_title }}</h4>
						</div>
						 
                              <div class="iframe">
        {% if section.settings.video1_iframe == "" %}
        <img src="{{ 'video.png' | asset_url }}" class="video"/>
        {% else %}
        {{ section.settings.video1_iframe }}
        {% endif %}
                                {% if section.settings.video1_caption != "" %}
                                <p>{{ section.settings.video1_caption }}</p>
                                {% endif %}
                                 <a href="https://anmolbaby-carrier.myshopify.com/pages/tutorials" class="btn">
            WATCH NOW
          </a>
   
      </div>
                  
							 
						
				</div>
              {% comment %}
				<div class="col-md-6 grey_part">
						<div>
							<h4>{{ section.settings.video2_title }}</h4>
                          
						</div>
						                              <div class="iframe">
        {% if section.settings.video2_iframe == "" %}
        <img src="{{ 'video.png' | asset_url }}" class="video"/>
        {% else %}
        {{ section.settings.video2_iframe }}
        {% endif %}
                                {% if section.settings.video2_caption != "" %}
                                                        <p>{{ section.settings.video2_caption }}</p>
                                                        {% endif %}
   
      </div>
                  
				</div>
              {% endcomment %} 
			</div>
		</div>
          </div>
  </div>
	</section>

 {% endif %}
 {% endif %}
<style>
   @media screen and (min-width:1288px) {
   .grey_part {
	margin: -118px auto 34px;
   }
  }
  
  .grey_bg{background:{{section.settings.footer_video_bg_color}};}
  
  .grey_part h4{color:{{section.settings.footer_video_font_color}};
 
  font-size:{{section.settings.footer_video_font_size}};
    font-weight:{{section.settings.footer_video_font_style}};
  }
   .grey_part p{color:{{section.settings.footer_video_font_color}};}
  {% if section.settings.footer_video_homepage_only %}
   {% if template !="index" %}
  .videosections{display:none;}
   {% endif %}
   {% endif %}
   iframe.lazyloaded {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    height: 100%;
    width: 100%;
    border: 0;
}
</style>
 
